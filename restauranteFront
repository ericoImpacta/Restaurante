JS

const API_CLIENTES = "http://localhost:5000/clientes";
const API_RESTAURANTES = "http://localhost:5000/restaurantes";
const API_PRATOS = "http://localhost:5000/pratos";
const API_PEDIDOS = "http://localhost:5000/pedidos";

// ---------- CLIENTES ----------
const clienteForm = document.getElementById("clienteForm");
const listaClientes = document.getElementById("listaClientes");
const mensagemCliente = document.getElementById("mensagemCliente");

clienteForm.addEventListener("submit", async (e) => {
    e.preventDefault();
    const nome = document.getElementById("nomeCliente").value;
    const email = document.getElementById("emailCliente").value;
    const telefone = document.getElementById("telefoneCliente").value;

    const res = await fetch(API_CLIENTES, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ nome, email, telefone })
    });

    if (res.ok) {
        clienteForm.reset();
        // listarClientes();   <-- remover para não listar na tela
        mensagemCliente.textContent = "Cadastro realizado com sucesso!";
        setTimeout(() => { mensagemCliente.textContent = ""; }, 3000);
    } else {
        mensagemCliente.textContent = "Erro ao cadastrar cliente.";
    }
});


// ---------- RESTAURANTES ----------
const restauranteForm = document.getElementById("restauranteForm");
const listaRestaurantes = document.getElementById("listaRestaurantes");
const mensagemRestaurante = document.getElementById("mensagemRestaurante");

restauranteForm.addEventListener("submit", async (e) => {
    e.preventDefault();
    const nome = document.getElementById("nomeRestaurante").value;
    const endereco = document.getElementById("enderecoRestaurante").value;

    const res = await fetch(API_RESTAURANTES, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ nome, endereco })
    });

    if (res.ok) {
        restauranteForm.reset();
        listarRestaurantes();
        mensagemRestaurante.textContent = "Cadastro realizado com sucesso!";
        setTimeout(() => { mensagemRestaurante.textContent = ""; }, 3000);
    } else {
        mensagemRestaurante.textContent = "Erro ao cadastrar restaurante.";
    }
});

async function listarRestaurantes() {
    const res = await fetch(API_RESTAURANTES);
    const restaurantes = await res.json();
    listaRestaurantes.innerHTML = "";
    restaurantes.forEach(r => {
        const li = document.createElement("li");
        li.textContent = `${r.id} - ${r.nome} | ${r.endereco}`;
        listaRestaurantes.appendChild(li);
    });
}
listarRestaurantes();

// ---------- PRATOS ----------
const pratoForm = document.getElementById("pratoForm");
const listaPratos = document.getElementById("listaPratos");
const mensagemPrato = document.getElementById("mensagemPrato");

pratoForm.addEventListener("submit", async (e) => {
    e.preventDefault();
    const nome = document.getElementById("nomePrato").value;
    const preco = parseFloat(document.getElementById("precoPrato").value);
    const restaurante_id = parseInt(document.getElementById("restauranteIdPrato").value);

    const res = await fetch(API_PRATOS, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ nome, preco, restaurante_id })
    });

    if (res.ok) {
        pratoForm.reset();
        listarPratos();
        mensagemPrato.textContent = "Cadastro realizado com sucesso!";
        setTimeout(() => { mensagemPrato.textContent = ""; }, 3000);
    } else {
        mensagemPrato.textContent = "Erro ao cadastrar prato.";
    }
});

async function listarPratos() {
    const res = await fetch(API_PRATOS);
    const pratos = await res.json();
    listaPratos.innerHTML = "";
    pratos.forEach(p => {
        const li = document.createElement("li");
        li.textContent = `${p.id} - ${p.nome} | R$${p.preco} | Restaurante ${p.restaurante_id}`;
        listaPratos.appendChild(li);
    });
}
listarPratos();

// Pedido
const pedidoForm = document.getElementById("pedidoForm");
const listaPedidos = document.getElementById("listaPedidos");
const mensagemPedido = document.getElementById("mensagemPedido");

pedidoForm.addEventListener("submit", async (e) => {
    e.preventDefault();
    const cliente_id = parseInt(document.getElementById("clienteIdPedido").value);
    const restaurante_id = parseInt(document.getElementById("restauranteIdPedido").value);
    const itens = document.getElementById("itensPedido").value;

    const res = await fetch(API_PEDIDOS, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ cliente_id, restaurante_id, itens })
    });

    if (res.ok) {
        pedidoForm.reset();
        listarPedidos();
        mensagemPedido.textContent = "Pedido criado com sucesso!";
        setTimeout(() => { mensagemPedido.textContent = ""; }, 3000);
    } else {
        mensagemPedido.textContent = "Erro ao criar pedido.";
    }
});

async function listarPedidos() {
    const res = await fetch(API_PEDIDOS);
    const pedidos = await res.json();
    listaPedidos.innerHTML = "";
    pedidos.forEach(p => {
        const li = document.createElement("li");
        li.textContent = `Pedido ${p.id} | Cliente ${p.cliente_id} | Restaurante ${p.restaurante_id} | Itens: ${p.itens}`;
        listaPedidos.appendChild(li);
    });
}
listarPedidos();

